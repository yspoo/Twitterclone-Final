<!-- Banner -->
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">Fluid jumbotron</h1>
    <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent. <%= @username %></p>
  </div>
</div>
<!-- End of banner -->

<div class="container">

  <div class="row"> <!-- start of row 1 -->

    <div class="col-3">
      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <h4 class="card-title">Profile</h4>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>

    <div class="col-6">

      <%= render 'partials/tweet_form' %> <!-- Tweet form or Box for tweeting -->
      <% @tweets.latest.each do |tweet| %>

      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <h4 class="card-title"><%= current_user.username %></h4>
          <p class="card-text"><%= tweet.content %></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-3">
      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <h4 class="card-title">Who to follow</h4>

          <%= render 'partials/follow-unfollow_buttons', :user => User.find(@username) %> <!-- we are assigning the username of the current user to :user -->

          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <h4 class="card-title">Trends for you</h4>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
  </div> <!-- end of row 1 -->

</div> <!-- end of container -->
