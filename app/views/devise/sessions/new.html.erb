  <div class="container-fluid guest-login d-flex">
    <div class="row justify-content-center"> <!-- justify-content: It defines the alignment along the main axis. It helps distribute extra free space leftover when either all the flex items on a line are inflexible, or are flexible but have reached their maximum size. -->

      <!-- Column for description -->
      <div class="col-3 welcome">
        <h3><strong>Welcome to DragonTweet.</strong></h3>
        </br>
        <h5><p>DragonTweet is the 21st century app that connects fighters with super powers from DragonBall Z. Sign up to challenge other fighters in the universe. Throw your first ki blast today!</p></h5>
      </div>

      <!-- Column for FORMS -->
      <div class="col-2">

          <div id="login-form" class="container mb-4">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control-sm' } }) do |f| %>
              <div class="inputs">
                <%= f.input :email, required: false, autofocus: true, placeholder: 'Email', label: false %>
                <%= f.input :password, required: false, autocomplete: "off", placeholder: "Password", label: false %>
                  <%= f.input :remember_me, as: :boolean, wrapper_html: {class: 'mb-0'}, label_html: {class: 'small'} if devise_mapping.rememberable? %>
                  <%= render "devise/shared/links" %>
              </div> <!-- End of log in form inputs -->
              <div class="button">
                <%= f.button :submit, "Log in", class: "btn btn-sm btn-outline-primary" %>
              </div> <!-- End of log in form button -->
            <% end %>
          </div> <!-- End of column for LOG IN forms -->

        <div id="signup-form" class="container"> <!-- Sign up form -->
          <%= render "devise/shared/registration_form" %>
        </div><!-- End of column for sign up form -->

      </div> <!-- End of column for FORMS -->

    </div> <!-- End of row -->

  </div> <!-- End of container-fluid -->

</body>
