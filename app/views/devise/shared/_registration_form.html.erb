<h5><strong>New to Twitter?</strong> Sign up now!</h5>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { class: 'form-control-sm'} }) do |f| %>
  <%= devise_error_messages! %>
  <div class="inputs">
    <%= f.input :username, required: true, autofocus: true, placeholder: "Username", label: false %>
    <!-- The autofocus field is switched from the email to the username. Autofocus is the field that will be highlighted whenever a user enters a page and attempts to fill up the form. (It just highlights the selected input box.) It is especially useful for mobile devices.  -->
    <%= f.input :email, required: true, placeholder: "Email", label: false, autocomplete: "off" %>
    <%= f.input :password, required: true, placeholder: "Password", label: false, hint: ("#{@minimum_password_length} characters minumum" if @minimum_password_length) %>
    <!-- "hint:" option requires a () wrapped around the entire block of code that follows it -->
    <%= f.input :password_confirmation, required: true, placeholder: "Password Confirmation", label: false, autocomplete: "off" %>
  </div>
  <div class="button">
    <%= f.button :submit, "Sign up", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
