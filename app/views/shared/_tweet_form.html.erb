
<%= form_for(@tweet, html: { multipart: true }) do |f| %>
  <div class="field">
    <%= f.text_area :content, autofocus: true, placeholder: "Write your tweet here..." %>
  </div>
  <%= f.submit "Tweet", class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>
